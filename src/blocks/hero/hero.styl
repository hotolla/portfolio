.hero
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100vh
  min-height: 400px
  text-align: center
  background-attachment: fixed
  background-image: url('../images/bg.jpg')
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  padding: 0 1rem

  @media (min-width: 992px)
    position: fixed
    top: 0
    bottom: 0
    left: 0
    width: 35%
    text-align: right
    align-items: flex-end
    justify-content: flex-start
    padding-top: 5em
    padding-right: 2rem

  @media (min-width: 1100px)
    padding-right: 4rem

  @media (max-width: 992px)
    background-position: center
    background-size: cover

    br
      display: none

  &__avatar
    display: inline-block
    border-radius: 50%
    width: 10rem
    height: 10rem
    margin-top: 1rem
    overflow: hidden
    flex-shrink: 0

    img
      width: 100%
      height: 100%
      object-fit: cover

  &__info
    color: #faf5f5

    @media (max-width: 992px)
      font-size: 1.6rem
      line-height: 1.8

.text
  color: #faf5f5
